{
  "experiment_name": "tiger_beauty_t5_rqkmeans_letter_format_fixed_v2_init_open_source",
  "best_metric": "validation/ndcg@20",
  "dataset": {
    "path_to_data_dir": "../data",
    "name": "Beauty",
    "max_sequence_length": 20,
    "samplers": {
      "type": "last_item_prediction",
      "negative_sampler_type": "random"
    },
    "letter_inter_json": "../data/Beauty/_inter.json"
  },
  "dataloader": {
    "train": {
      "batch_size": 256,
      "letter_index_json": "../data/Beauty/_index.json"
    },
    "validation": {
      "batch_size": 1024,
      "letter_index_json": "../data/Beauty/_index.json"
    }
  },
  "model": {
    "sequence_prefix": "item",
    "positive_prefix": "labels",
    "embedding_dim": 384,
    "codebook_size": 256,
    "num_positions": 20,
    "num_heads": 6,
    "num_encoder_layers": 4,
    "num_decoder_layers": 4,
    "dim_feedforward": 2048,
    "dropout": 0.1,
    "activation": "relu",
    "layer_norm_eps": 1e-9,
    "initializer_range": 0.02
  },
  "optimizer": {
    "type": "adam",
    "lr": 3e-4
  }
}